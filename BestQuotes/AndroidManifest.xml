<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.bestquotes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8"
        android:targetSdkVersion="17" />

     <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SEND_SMS"/>
     <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="com.app.bestquotes.BQApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.app.bestquotes.BestQuotesActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.app.bestquotes.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.bestquotes.TextDetailActivity"
            android:label="@string/title_activity_detail" >
        </activity>
        <activity
            android:name="com.app.bestquotes.ImageDetailActivity"
            android:label="Image Quote" >
        </activity>
        <activity
            android:name="com.app.bestquotes.AddTextQuoteActivity"
            android:label="@string/title_activity_add_text_quote" >
        </activity>
        <activity
            android:name="com.app.bestquotes.TextSMSActivity"
            android:label="@string/title_activity_text_sms" >
        </activity>
         <activity
            android:name="com.app.bestquotes.TextEmailActivity"
            android:label="Send As Mail" >
        </activity>
         <activity
            android:name="com.app.bestquotes.GridImage"
            android:label="Image Quotes" >
        </activity>
    </application>


       
  

</manifest>